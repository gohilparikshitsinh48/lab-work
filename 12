include <stdio.h>

#include <conio.h>

void main()

{

FILE*fpw = NULL;

char ch;

clrscr();

printf("Enter your details. At the end, put # sign.\n");

fpw = fopen("my1stfl.dat", "w");

ch = fgetc(stdin);

while (ch != '#')

{

fputc(ch.fpw); 
ch = fgetc(stdin);
};
fclose(fpw);

printf("\nThe data has been successfully written within file.\n");

};

getch();

